@model ProfileViewModel
@{
    ViewData["Title"] = "Index";
}

<header class="row mt-3 mb-3">
    <div class="col-2 text-center">
        <a href="#" data-toggle="modal" data-target="#proPicModal"><img width="100" height="100" class="d-inline-block align-top rounded-circle" src="@Model.Propic" alt="Alternate Text" /></a>
    </div>
    @Html.Partial("_PropicModal", Model.Propic)

    <div class="col-10">
        <div class="row">
            <div class="col-3 h3"><strong>@Model.Username</strong></div>
            <div class="col-9">@Html.Partial("_ButtonFollow")</div>
        </div>

        <div class="row font-weight-light font-italic col-12">
            @Model.Name @Model.Surname
        </div>
        <div class="row col-12">
            Followers: <a href="#" data-toggle="modal" data-target="#FollowersModal">@Model.Followers.Count()</a>
        </div>
        @Html.Partial("_ModalFollowers", Model.Followers)

        <div class="row col-12">
            Followed: <a href="#" data-toggle="modal" data-target="#FollowedModal">@Model.Followed.Count()</a>
        </div>
        @Html.Partial("_ModalFollowed", Model.Followed)
    </div>
</header>
<hr />


<div class="container">
    <div class="jumbotron">
        @foreach (Post p in Model.Posts)
        {
            @Html.Partial("_Post", new PostViewModel { Post = p.Body, User = Model.Username, PublishDate = p.PublishDate, Propic = Model.Propic })
        }
    </div>
</div>

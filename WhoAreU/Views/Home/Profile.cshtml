@model ProfileViewModel
@{
    ViewData["Title"] = "Profile";
}

<h2>@Model.Username</h2>

@Html.Partial("_WritePost")

<hr />

@foreach (var Post in Model.Posts)
{
    @Html.Partial("_Post", new PostViewModel { Post = Post.Body, User = Model.Username, PublishDate = Post.PublishDate, Propic = Model.Propic })
}